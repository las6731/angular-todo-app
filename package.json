{
	"name": "angular-todo-app",
	"version": "1.0.0",
	"description": "Fairly simple(ish) todo app with an Angular frontend and a Koa/Postgres backend.",
	"main": "index.js",
	"scripts": {
		"install:frontend": "cd frontend && npm install",
		"install:api": "cd api && npm install",
		"postinstall": "run-p install:*",
		"test:frontend": "cd frontend && npm test",
		"test:api": "cd api && npm test",
		"test": "run-p test:*",
		"start:frontend": "cd frontend && npm start",
		"start:api": "cd api && npm start",
		"start": "run-p start:*"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/las6731/angular-todo-app.git"
	},
	"author": "Lukas Short",
